<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <!--log4Net Start-->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    <!--配置一个结点 名称为log4net-->
    <!--log4Net End-->
  </configSections>

  <log4net debug="true">

    <logger name="Loggering">
      <level value="All"/>
      <appender-ref ref="ADONetAppender"/>
    </logger>

    <root>
      <level value="ALL" />
    </root>

  
    <logger name="logerror">
      <level value="ERROR" />
      <appender-ref ref="ErrorAppender" />
    </logger>
    <logger name="loginfo">
      <level value="INFO" />
      <appender-ref ref="InfoAppender" />
    </logger>
    <logger name="logdebug">
      <level value="DEBUG" />
      <appender-ref ref="LogdebugAppender" />
    </logger>
   
    <!--调用Debug日志-->
    <appender name="LogdebugAppender" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="UTF-8" />
      <param name="File" value="Log\\Debug\\" />
      <param name="AppendToFile" value="true" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
      <!--为每天每一个文件-->
      <param name="RollingStyle" value="Date" />

      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%n信息时间:%d%n信息内容:%m%n" />
      </layout>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    </appender>
    

    <!--调试日志-->
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="UTF-8" />
      <param name="File" value="Log\\Info\\" />
      <param name="AppendToFile" value="true" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
      <!--为每天每一个文件-->
      <param name="RollingStyle" value="Date" />

      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%n信息时间:%d%n信息内容:%m%n" />
      </layout>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    </appender>
    <!--错误日志-->
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <param name="Encoding" value="UTF-8" />
      <param name="File" value="Log\\Error\\" />
      <param name="AppendToFile" value="true" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
      <!--为每天每一个文件-->
      <param name="RollingStyle" value="Date" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%n异常时间:%d%n异常内容:%m%n" />
      </layout>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    </appender>
    
    
  </log4net>
</configuration>